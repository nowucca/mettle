--
-- NOTE: to start up mysql with native authentication
--       mysql.server start --default-authentication-plugin=mysql_native_password
--
DROP SCHEMA IF EXISTS `mettle_ethereum` ;
CREATE SCHEMA IF NOT EXISTS `mettle_ethereum` DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci ;
USE `mettle_ethereum` ;

DROP USER IF EXISTS 'eth'@'%';
CREATE USER IF NOT EXISTS 'eth'@'%' IDENTIFIED WITH mysql_native_password BY 'eth';
GRANT ALL PRIVILEGES ON mettle_ethereum.* TO 'eth'@'%';